# Database
DATABASE_URL=postgresql+asyncpg://gamegame:gamegame@localhost:5432/gamegame
DATABASE_URL_TEST=postgresql+asyncpg://gamegame_test:gamegame_test@localhost:5433/gamegame_test

# Redis (for task queue)
REDIS_URL=redis://localhost:6379

# Auth
SESSION_SECRET=change-this-to-a-secure-32-char-secret
JWT_ALGORITHM=HS256
JWT_EXPIRATION_DAYS=30

# OpenAI
OPENAI_API_KEY=sk-...

# Mistral (PDF extraction)
MISTRAL_API_KEY=...

# Storage
STORAGE_BACKEND=local
STORAGE_PATH=./uploads

# App
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]
APP_URL=http://localhost:5173

# Email (console = log only, smtp = SMTP server, resend = Resend API)
EMAIL_BACKEND=console
EMAIL_FROM=GameGame <noreply@gamegame.app>

# SMTP settings (when EMAIL_BACKEND=smtp)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USERNAME=
# SMTP_PASSWORD=
# SMTP_USE_TLS=true

# Resend settings (when EMAIL_BACKEND=resend)
# RESEND_API_KEY=re_...

# Optional: Sentry
# SENTRY_DSN=
