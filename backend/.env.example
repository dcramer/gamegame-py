# GameGame Backend Configuration
# Copy this file to .env and fill in your values

# Database (default works with docker-compose)
DATABASE_URL=postgresql+asyncpg://gamegame:gamegame@localhost:5432/gamegame

# Redis (default works with docker-compose)
REDIS_URL=redis://localhost:6379

# Authentication
SESSION_SECRET=change-this-to-a-secure-32-char-secret-key

# OpenAI (required for chat, embeddings, and reranking)
OPENAI_API_KEY=sk-your-openai-api-key

# Mistral (required for PDF extraction)
MISTRAL_API_KEY=your-mistral-api-key

# Storage (local or s3)
STORAGE_BACKEND=local
STORAGE_PATH=./uploads

# S3 (if using s3 backend)
# S3_BUCKET=your-bucket-name
# S3_REGION=us-east-1

# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO

# CORS (comma-separated origins)
# CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]
